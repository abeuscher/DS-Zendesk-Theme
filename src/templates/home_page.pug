main.main-sidebar(role='main')
  .banner-home(data-bg="{{asset 'bg-header-home.jpg'}}")
  .container.content
    section.section.knowledge-base
      section.categories.blocks
        ul.blocks-list
          | {{#each categories}}
          | {{#if ../has_multiple_categories}}
          li.blocks-item
            a.blocks-item-link(href='{{url}}')
              h3.blocks-item-title {{name}}
              p.blocks-item-description {{excerpt description}}
          | {{else}}
          | {{#each sections}}
          li.blocks-item(class='{{#if internal}}blocks-item-internal{{/if}}')
            a.blocks-item-link(href='{{url}}')
              h3.blocks-item-title
                | {{name}}
                | {{#if internal}}
                span.icon-lock(title="{{t 'internal'}}")
                | {{/if}}
              p.blocks-item-description {{excerpt description}}
          | {{/each}}
          | {{/if}}
          | {{/each}}
        | {{pagination}}
    section.video-grid
      h3 Recent Video Content
      div(style='width: 320px; float: left; padding-right: 6px; padding-bottom: 10px;')
        a(href='https://dysi.zendesk.com/hc/en-us/articles/360001642672')
          img(width='320px', src="\{{asset '360001642672.png'}}")
          p ► How to Broadcast a Post (2:30)
        p
      div(style='width: 320px; float: left; padding-right: 6px; padding-bottom: 10px')
        a(href='https://dysi.zendesk.com/hc/en-us/articles/360001691072')
          img(width='320px', src="\{{asset '360001691072.png'}}")
          p ► Creating Newsletters (4:16)
        p
      div(style='width: 320px; float: left; padding-right: 6px; padding-bottom: 10px')
        a(href='https://dysi.zendesk.com/hc/en-us/articles/360001671611')
          img(width='320px', src="\{{asset '360001671611.png'}}")
          p ► Configuring SmartContent Feeds (2:48)
        p
      div(style='width: 320px; float: left; padding-right: 6px; padding-bottom: 10px')
        a(href='https://dysi.zendesk.com/hc/en-us/articles/360001668671')
          img(width='320px', src="\{{asset '360001668671.png'}}")
          p ► Submitting Content with the Dynamic Signal mobile app (1:43)
        p
      div(style='width: 320px; float: left; padding-right: 6px; padding-bottom: 10px')
        a(href='https://dysi.zendesk.com/hc/en-us/articles/360001648272')
