
<main class="main-sidebar" role="main">
  <div class="sidebar-panel" id="sidebar">
    <ul class="sidebar">
      <li class="sidebar-item sidebar-home"><a class="sidebar-item-title" href="{{page_path 'help_center'}}">Home</a></li>
      <li class="sidebar-section" v-for="category in categories" :data-id="category.id">
        <h4 class="sidebar-category-title" v-cloak="">{[{category.name}]}</h4>
        <ul>
          <li :class="['sidebar-item', isOpen(section.id)]" v-for="section in category.sections" :data-id="section.id"><span class="sidebar-item-title" @click="setActiveSection(section.id)">{[{section.name}]}</span>
            <ul v-if="section.id === activeSection">
              <li :class="['sidebar-item', isCurrent(article.id)]" v-for="article in section.articles"><a class="sidebar-item-link" :href="article.html_url">{[{article.title}]}</a></li>
            </ul>
          </li>
        </ul>
      </li>
    </ul>
  </div>
  <div class="container content">
    <div class="community-image"></div>
    <h1 class="home-title">Dynamic Signal Support Center</h1>
    <p class="home-desc">Get familiar with the Dynamic Signal Platform.</p>
    <section class="section knowledge-base">
      <section class="categories blocks">
        <ul class="blocks-list">
          {{#each categories}}
          {{#if ../has_multiple_categories}}
          <li class="blocks-item"><a class="blocks-item-link" href="{{url}}">
              <h3 class="blocks-item-title">{{name}}</h3>
              <p class="blocks-item-description">{{excerpt description}}</p></a></li>          {{else}}
                      {{#each sections}}
          <li class="blocks-item {{#if internal}}blocks-item-internal{{/if}}"><a class="blocks-item-link" href="{{url}}">
              <h3 class="blocks-item-title">
                {{name}}
                {{#if internal}}<span class="icon-lock" title="{{t 'internal'}}"></span>                    {{/if}}
              </h3>
              <p class="blocks-item-description">{{excerpt description}}</p></a></li>            {{/each}}
                    {{/if}}
                  {{/each}}
        </ul>      {{pagination}}
      </section>
    </section>
    <section class="section support">
      <h3>Still have questions?</h3>
      <p>We're happy to help with whatever questions you have! You can reach out to us by chat or <a href="{{page_path 'new_request'}}">submit a support request</a>!</p>
    </section>
  </div>
  <script>sidebar.$mount("main");</script>
</main>